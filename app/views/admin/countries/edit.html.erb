<h2><%= @country.name %></h2>

<%= form_tag({:action => :update}, { :method => :put, :id => "related-items"}) do %>
  <div class="row-fluid">
    <div class="span5">
      <%= select_tag("related_artefact_ids[]",
                     options_from_collection_for_select(@related_items, :id, :name),
                     { prompt: "Select a related item", :class => "span9" }) %>
    </div>
  </div>

  <div class="row-fluid">
    <div class="btn-group">
      <%= submit_tag "Save", :class => "btn btn-success" %>
    </div>
  </div>
<% end %>
